import random
cards = {14: "Ace",
         11: "Jack",
         12: "Queen",
         13: "King"}
def draw(x):
    drawn = []
    for _ in range(x):
        card = random.randint(2, 14)
        drawn.append(card)
    drawn.sort()
    hand = []
    for i in drawn:
        if i in cards:
            hand.append(cards[i])
        else:
            hand.append(str(i))
    return hand
exit = 0
hand = draw(2)
dealer = draw(2)
print("Dealer's hand:", dealer[1], "and a hidden card")
print("Your hand:", " ".join(hand))
while exit == 0:
    if max(hand) > 21:
        print("Break. You have exceeded 21.")
        break
    play = input("Hit or stay\n").strip().lower()
    if play == "Hit":
        
        print("You chose to hit. Drawing a card...")
    elif play == "stay":
        print("You chose to stay.")
        exit = 1
    else:
        print("Invalid input. Please type 'discard' or 'play'.")
