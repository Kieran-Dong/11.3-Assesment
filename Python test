import random
cards = {14: "Ace",
         11: "Jack",
         12: "Queen",
         13: "King"}
def draw(x):
    drawn = []
    for _ in range(x):
        card = random.randint(2, 11)
        drawn.append(card)
    return drawn
exit = 0
hand = draw(2)
dealer = draw(2)
print("Dealer's hand:", dealer[1], "and a hidden card")
hand = " ".join(hand)
print(hand)
print("Your hand:", " ".join(str(hand)))
while True:
    try:
        if max(hand) > 21:
            print("Bust. You have exceeded 21.")
            break
        play = input("Hit or stay\n").strip().lower()
        if play == "hit":
            print("You chose to hit. Drawing a card...")
            new_card = draw(1)[0]
            hand.append(new_card)
            print("Your new hand:", " ".join(str(hand)))
        elif play == "stay":
            print("You chose to stay.")
        else:
            print("Invalid input. Please type 'hit' or 'stay'.")
            break
    except ValueError:
        print("Invalid input. Please type 'hit' or 'stay'.")
        continue