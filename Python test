import random
cards = {"Ace": 11, 
         "Jack": 10, 
         "Queen": 10, 
         "King": 10}
def draw(x):
    drawn = []
    for _ in range(x):
        card = random.randint(2, 11)
        drawn.append(card)
    return drawn
def print_hand(hand):
    fullhand = str(hand)
    for i in fullhand:
        if i == "[" or i == "]" or i == ",":
            fullhand = fullhand.replace(i, "")
    return fullhand
exit = 0
hand = draw(2)
dealer = draw(2)
print("Dealer's hand:", dealer[1], "and a hidden card")
print("Your hand:", print_hand(hand))
while True:
    try:
        if sum(hand) > 21:
            print("Bust. You have exceeded 21.")
            break
        play = input("Hit or stay\n").strip().lower()
        if play == "hit":
            print("You chose to hit. Drawing a card...")
            new_card = draw(1)
            hand.append(new_card[0])
            print("Your new hand:", " ".join(str(card) for card in hand))
        elif play == "stay":
            print("You chose to stay.")
        else:
            print("Invalid input. Please type 'hit' or 'stay'.")
            break
    except ValueError:
        print("Invalid input. Please type 'hit' or 'stay'.")
        continue